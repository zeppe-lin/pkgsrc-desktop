# Description: Simple drag-and-drop source/sink for X or Wayland
# URL:         https://github.com/mwh/dragon
# Depends on:  gtk3

name=dragon-drop
version=1.2.0-2b90e5f
release=1
source="https://github.com/mwh/dragon/archive/${version#*-}/$name-$version.tar.gz
	60.patch
	78.patch
	79.patch"

build() {
	for f in $SRC/*.patch; do
		patch -d dragon-* -Np1 -i $f
	done

	make -C dragon-* NAME=$name PREFIX=/usr DESTDIR=$PKG install
}
