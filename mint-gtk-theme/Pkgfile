# Description: Mint-X and Mint-Y GTK2/3/4 theme
# URL:         https://github.com/linuxmint/mint-themes
# Depends on:  adwaita-gtk-theme gtk-engine-murrine

name=mint-gtk-theme
version=2.3.7
release=1
source=http://packages.linuxmint.com/pool/main/m/mint-themes/mint-themes_${version}_all.deb

build() {
	ar x mint-themes_${version%%-*}_all.deb
	bsdtar -p -o --no-acls --no-xattrs --no-mac-metadata \
	  --no-fflags --exclude usr/share/doc -C $PKG -xf data.tar.xz

	# Remove xfce4/metacity/cinnamon themes
	cd $PKG/usr/share/themes
	rm -r Mint-*/cinnamon Mint-*/metacity-1 Mint-*/xfwm4
}
