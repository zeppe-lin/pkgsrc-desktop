# Description: Identify a pixel color on an X Window
# URL:         https://github.com/muquit/grabc
# Depends on:  xorg-libx11

name=grabc
version=1.0.2
release=3
source="https://github.com/muquit/grabc/archive/v$version/grabc-$version.tar.gz
	Makefile.patch
	grabc.c.patch
	grabc.pod.patch"

build() {
	patch -d grabc-$version -Np1 -i $SRC/Makefile.patch
	patch -d grabc-$version -Np1 -i $SRC/grabc.c.patch
	patch -d grabc-$version -Np1 -i $SRC/grabc.pod.patch

	make -C grabc-$version all doc

	install -m 0755 -Dt $PKG/usr/bin            grabc-$version/grabc
	install -m 0644 -Dt $PKG/usr/share/man/man1 grabc-$version/grabc.1
}
