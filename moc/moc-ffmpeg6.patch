+/* Decode audio using FFmpeg's send/receive encoding and decoding API. */
+static int decode_audio (AVCodecContext *ctx, AVFrame *frame,
+                         int *got_frame_ptr, const AVPacket *pkt)
+{
+	int rc, result = 0;
+
+	*got_frame_ptr = 0;
+
+	rc = avcodec_send_packet (ctx, pkt);
+	switch (rc) {
+	case 0:
