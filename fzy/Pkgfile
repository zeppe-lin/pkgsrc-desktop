# Description: Simple, fast fuzzy finder for the terminal
# URL:         https://github.com/jhawthorn/fzy

name=fzy
version=1.0
release=1
source=fzy-$version.tar.gz::https://github.com/jhawthorn/fzy/archive/refs/tags/$version.tar.gz

build() {
	# disable debug flag
	sed -i '/CFLAGS+=/s/ -g/ /' fzy-$version/Makefile

	# allow upstream optimization flag
	CFLAGS="$(echo $CFLAGS | sed 's/-O[0-9fast]* / /')"

	make -C fzy-$version PREFIX=/usr DESTDIR=$PKG install
}
