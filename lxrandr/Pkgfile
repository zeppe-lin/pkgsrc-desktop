# Description: Monitor configuration tool
# URL:         https://github.com/lxde/lxrandr
# Depends on:  gtk xorg-xrandr
# Optional:    gtk3

name=lxrandr
version=0.3.3
release=1
source=$name-$version.tar.gz::https://github.com/lxde/$name/archive/refs/tags/$version.tar.gz

build() {
	# disable i18n
	export LINGUAS=' '

	# Don't place OnlyShowIn=LXDE into ~/.config/autostart/lxrandr.desktop.
	# That allows to run autostart entries by dapper.
	sed -i '/g_key_file_set_string( kf, grp, "OnlyShowIn", "LXDE" )/d' \
		$name-$version/src/lxrandr.c

	mkdir build; cd build

	autoreconf -fi ../$name-$version
	../$name-$version/configure  \
		--prefix=/usr        \
		--sysconfdir=/etc    \
		--disable-nls        \
		#--enable-gtk3       \

	make V=1
	make DESTDIR=$PKG install
}
