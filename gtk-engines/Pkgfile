# Description: Standard theme engines for GTK+2 (HighContrast engine only)
# URL:         https://download.gnome.org/sources/gtk-engines/
# Depends on:  gtk

name=gtk-engines
version=2.20.2
release=2
source=https://download.gnome.org/sources/$name/2.20/$name-$version.tar.bz2

build() {
	# disable i18n
	export LINGUAS=' '

	sed -i 's|<glib/.*\.h>|<glib.h>|' \
		$name-$version/engines/clearlooks/src/animation.c

	mkdir build; cd build

	../$name-$version/configure  \
		--prefix=/usr        \
		--enable-animation   \
		--disable-all        \
		--disable-nls        \

	make V=1
	make DESTDIR=$PKG install
}
