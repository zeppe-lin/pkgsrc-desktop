# Description: GTK+ based simple text editor
# URL:         https://github.com/tarot231/leafpad
# Depends on:  desktop-file-utils gtk

# Maintainer notes on dependencies:
#   desktop-file-utils: required only for post-install script

name=leafpad
version=0.8.19-3b1a2c2
release=1
source=https://github.com/tarot231/$name/archive/${version#*-}/$name-$version.tar.gz

build() {
	export LINGUAS=' '

	mkdir build; cd build

	autoreconf -fiv ../$name-*
	../$name-*/configure \
		--prefix=/usr \
		--enable-chooser \
		--enable-print \
		--disable-nls \
		--disable-emacs \

	make V=1
	make DESTDIR=$PKG install
}
