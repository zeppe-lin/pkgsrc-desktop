# Description: Command-line interface to various paste-bins
# URL:         https://github.com/zlin/wgetpaste

name=wgetpaste
version=2.34
release=2
source="https://github.com/zlin/$name/archive/$version/$name-$version.tar.gz
	55.patch"

build() {
	# add man page
	patch -d $name-$version -Np1 -i $SRC/55.patch

	install -m 0755 -Dt $PKG/usr/bin            $name-$version/$name
	install -m 0644 -Dt $PKG/usr/share/man/man1 $name-$version/$name.1
}
