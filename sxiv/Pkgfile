# Description: Neo Simple X Image Viewer
# URL:         https://codeberg.org/nsxiv/nsxiv
# Depends on:  imlib2 libexif xorg-libxft

name=sxiv
version=31
release=1
source=nsxiv-$version.tar.gz::https://codeberg.org/nsxiv/nsxiv/archive/v31.tar.gz

build() {
	sed -ri '/^CFLAGS/s/ = /+=/;s/-O2//' nsxiv/Makefile

	make -C nsxiv HAVE_LIBWEBP=0 all
	make -C nsxiv HAVE_LIBWEBP=0 PREFIX=/usr DESTDIR=$PKG install

	ln -s /usr/bin/nsxiv $PKG/usr/bin/sxiv
	ln -s /usr/share/man/man1/nsxiv.1 $PKG/usr/share/man/man1/sxiv.1

	# remove junk
	rm -r $PKG/usr/share/doc
}
