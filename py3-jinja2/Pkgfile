# Description: Simple pythonic template language written in Python
# URL:         https://palletsprojects.com/p/jinja/
# Depends on:  py3-markupsafe

name=py3-jinja2
version=3.1.4
release=1
source=https://files.pythonhosted.org/packages/source/j/jinja2/jinja2-$version.tar.gz

build() {
	cd jinja2-$version

	gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
	/usr/bin/python3 -m installer -d $PKG .dist/*.whl

	/usr/bin/python3     -m compileall $PKG
	/usr/bin/python3 -O  -m compileall $PKG
	/usr/bin/python3 -OO -m compileall $PKG
}
