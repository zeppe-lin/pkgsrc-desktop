# Description: UI library focusing on simplicity and minimalism
# URL:         https://pwmt.org/projects/girara
# Depends on:  gtk3
# Optional:    libnotify json-glib

name=girara
version=0.4.2
release=1
source=https://pwmt.org/projects/$name/download/$name-$version.tar.xz

build() {
	# skip building that
	sed -e "/^subdir('tests')/d"    \
	    -e "/^subdir('doc')/d"      \
	    -e "/^subdir('po')/d"       \
	    -i $name-$version/meson.build

	# -D docs=disabled:   doxygen API docs
	# -D json=disabled:   dump configuration using JSON,
	#                     requires json-glib
	# -D notify=disabled: notifications using libnotify
	meson build $name-$version      \
		--prefix=/usr           \
		--sysconfdir=/usr/etc   \
		--buildtype=plain       \
		--wrap-mode=nodownload  \
		-D b_lto=true           \
		-D b_pie=true           \
		-D docs=disabled        \
		-D json=disabled        \
		-D notify=disabled      \
		-D tests=disabled       \

	# remove default -pipe flag
	sed -i 's/ \-pipe / /g' \
		build/compile_commands.json build/build.ninja

	ninja -C build -j ${JOBS:-1} -v
	DESTDIR=$PKG ninja -C build install
}
