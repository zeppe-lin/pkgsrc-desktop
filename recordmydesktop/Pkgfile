# Description: OGG encapsulated Theora/Vorbis recording of your desktop
# URL:         https://github.com/Enselic/recordmydesktop/
# Depends on:  alsa-lib libtheora popt xorg-imake xorg-libsm xorg-libxdamage xorg-libxext

name=recordmydesktop
version=0.4.0
release=1
source=https://github.com/Enselic/$name/releases/download/v$version/$name-$version.tar.gz

build() {
	mkdir build; cd build

	../$name-$version/configure  \
		--prefix=/usr        \
		--enable-oss=no      \
		--enable-jack=no     \

	make V=1
	make DESTDIR=$PKG install
}
