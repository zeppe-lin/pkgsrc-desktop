# Description: E-book reader using crengine-ng
# URL:         https://gitlab.com/coolreader-ng/crqt-ng
# Depends on:  crengine-ng qt5

name=crqt-ng
version=1.0.14
release=1
source=https://gitlab.com/coolreader-ng/$name/-/archive/$version/$name-$version.tar.gz

build() {
	cmake -S $name-$version -B build -G Ninja       \
		-D CMAKE_INSTALL_PREFIX=/usr            \
		-D CMAKE_BUILD_TYPE=Release             \
		-D CMAKE_C_FLAGS_RELEASE="$CFLAGS"      \
		-D CMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS"  \
		-D USE_QT=QT5                           \
		-Wno-dev

	ninja -C build -j ${JOBS:-1} -v
	DESTDIR=$PKG ninja -C build install

	# remove i18n entries
	sed -ri '/\[.+\]=/d' $PKG/usr/share/applications/*.desktop
}
