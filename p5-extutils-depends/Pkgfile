# Description: Easily build XS extensions that depend on XS extensions
# URL:         https://metacpan.org/pod/ExtUtils::Depends
# Depends on:  p5-xml-parser

name=p5-extutils-depends
version=0.8002
release=1
source=https://cpan.metacpan.org/authors/id/E/ET/ETJ/ExtUtils-Depends-$version.tar.gz

build() {
	cd ExtUtils-Depends-$version

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

	make
	make DESTDIR=$PKG install

	# remove junk and empty dirs
	find $PKG -depth \
		-type f \( -name perllocal.pod  \
			-o -name \*.bs          \
			-o -name .packlist      \
			\) -delete ,            \
		-type d -empty -delete

	# fix perms
	find $PKG -type f -a ! -perm -u+w | xargs chmod u+w
}
