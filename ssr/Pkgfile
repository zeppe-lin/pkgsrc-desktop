# Description: Simple screen recorder
# URL:         https://www.maartenbaert.be/simplescreenrecorder/
# Depends on:  ffmpeg glu qt5

name=ssr
version=0.4.4
release=3
source="ssr-$version.tar.gz::https://github.com/MaartenBaert/ssr/archive/$version.tar.gz
	0010-plthook.patch
	0020-ffmpeg-7.patch
	1000-Fix-build-with-ffmpeg-5.0.patch
	1010-appstream-metadata-https-category.patch
	1020-ffmpeg-7.patch
	2000-private-glinject.patch"

build() {
	patch -d ssr-$version -Np1 -i $SRC/0010-plthook.patch
	patch -d ssr-$version -Np1 -i $SRC/0020-ffmpeg-7.patch
	patch -d ssr-$version -Np1 -i $SRC/1000-Fix-build-with-ffmpeg-5.0.patch
	patch -d ssr-$version -Np1 -i $SRC/1010-appstream-metadata-https-category.patch
	patch -d ssr-$version -Np1 -i $SRC/1020-ffmpeg-7.patch
	patch -d ssr-$version -Np1 -i $SRC/2000-private-glinject.patch

	cmake -S ssr-$version -B build -G Ninja         \
		-D CMAKE_INSTALL_PREFIX=/usr            \
		-D CMAKE_INSTALL_LIBDIR=lib             \
		-D CMAKE_BUILD_TYPE=Release             \
		-D CMAKE_C_FLAGS_RELEASE="$CFLAGS"      \
		-D CMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS"  \
		-D WITH_QT5=on                          \
		-D WITH_PULSEAUDIO=off                  \
		-D WITH_JACK=off                        \
		-D WITH_V4L2=off                        \
		-Wno-dev

	ninja -C build -j ${JOBS:-1} -v
	DESTDIR=$PKG ninja -C build install

	# remove i18n entries
	sed -ri '/\[.+\]=/d' $PKG/usr/share/applications/*.desktop

	# remove translations
	rm -r $PKG/usr/share/simplescreenrecorder/translations
}
