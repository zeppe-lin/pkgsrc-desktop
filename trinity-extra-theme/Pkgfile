# Description: Trinitize look and feel of various applications
# URL:         https://github.com/trinity-theme/trinity-extra-theme

name=trinity-extra-theme
version=0.1-6914c3c
release=1
source=https://github.com/trinity-theme/$name/archive/${version#*-}/$name-$version.tar.gz

build() {
	install -m 0644 -Dt $PKG/usr/share/$name/ $name-*/*

	# remove junk
	cd $PKG/usr/share/$name
	rm LICENSE Makefile README.md
}
