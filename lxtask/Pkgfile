# Description: Task manager
# URL:         https://github.com/lxde/lxtask
# Depends on:  gtk3
# Optional:    gtk

name=lxtask
version=0.1.11
release=2
source=$name-$version.tar.gz::https://github.com/lxde/lxtask/archive/refs/tags/$version.tar.gz

build() {
	# disable i18n
	export LINGUAS=' '

	mkdir build; cd build

	autoreconf -fi ../$name-$version
	../$name-$version/configure  \
		--prefix=/usr        \
		--sysconfdir=/etc    \
		--disable-nls        \
		--enable-man         \
		--enable-gtk3        \

	make V=1
	make DESTDIR=$PKG install
}
