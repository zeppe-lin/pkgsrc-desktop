# Description: Keyboard and mouse configuration tool
# URL:         https://github.com/lxde/lxinput
# Depends on:  gtk
# Optional:    gtk3

name=lxinput
version=0.3.5
release=1
source=https://downloads.sourceforge.net/lxde/$name-$version.tar.xz

build() {
	# disable i18n
	export LINGUAS=' '

	# build in separate dir is broken
	cd $name-$version

	autoreconf -fi
	./configure                \
		--prefix=/usr      \
		--sysconfdir=/etc  \
		--disable-nls      \
		--enable-man       \
		#--enable-gtk3

	make V=1
	make DESTDIR=$PKG install
}
