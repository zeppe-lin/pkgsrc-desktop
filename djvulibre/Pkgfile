# Description: DjVu format reader
# URL:         https://djvu.sourceforge.net/
# Depends on:  libjpeg-turbo

name=djvulibre
version=3.5.29
release=1
source=https://download.sourceforge.net/djvu/$name-$version.tar.gz

build() {
	mkdir build; cd build

	autoreconf -fi ../$name-$version
	../$name-$version/configure  \
		--prefix=/usr        \
		--disable-i18n       \
		--without-tiff       \
		--enable-static      \

	# remove default debug flag
	find . -name Makefile -exec sed -ri '/C(XX)?FLAGS = /s/-g//g' {} \;

	make V=1
	make DESTDIR=$PKG install

	# remove junk
	cd $PKG/usr/share/djvu/osi; rm -r cs de fr ja zh
}
