# Description: Bluetooth libraries and utilities
# URL:         http://www.bluez.org/
# Depends on:  alsa-lib dbus json-c libical
# Optional:    alsa-lib cups docutils json-c libical

name=bluez
version=5.79
release=1
source="https://mirrors.edge.kernel.org/pub/linux/bluetooth/bluez-$version.tar.xz
  	rc.bluetoothd
	modprobe.bluetooth"

build() {
	mkdir build; cd build

	# --disable-cups:     otherwise requires cups
	# --disable-manpages: otherwise requires docutils, pygments
	# --enable-obex:      requires libical
	# --enable-mesh:      requires json-c
	../bluez-$version/configure    \
		--prefix=/usr          \
		--sysconfdir=/etc      \
		--localstatedir=/var   \
		--libexecdir=/usr/lib  \
		--disable-cups         \
		--disable-manpages     \
		--disable-systemd      \
		--enable-a2dp          \
		--enable-experimental  \
		--enable-library       \
		--enable-midi          \
		--enable-obex          \
		--enable-tools         \

	make V=1
	make DESTDIR=$PKG install

	# config
	install -m 0644 -D ../bluez-$version/src/main.conf \
		$PKG/etc/bluetooth/main.conf

	# service
	install -m 0755 -D $SRC/rc.bluetoothd $PKG/etc/rc.d/bluetoothd

	# modprobe
	install -m 0644 -D $SRC/modprobe.bluetooth $PKG/etc/modprobe.d/bluetooth

	# libical-related file
	install -m 0755 -Dt $PKG/usr/lib/bluetooth/ tools/obexctl

	# remove zsh completion
	rm -r $PKG/usr/share/zsh
}
