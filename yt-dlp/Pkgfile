# Description: CLI program to access YouTube and other data content
# URL:         https://github.com/yt-dlp/yt-dlp

name=yt-dlp
version=2025.03.31
release=1
source=$name-$version.tar.gz::https://github.com/$name/$name/releases/download/$version/$name.tar.gz

build() {
	install -m 0755 -Dt $PKG/usr/bin            yt-dlp/yt-dlp
	install -m 0644 -Dt $PKG/usr/share/man/man1 yt-dlp/yt-dlp.1

	# bash completion
	install -m 0644 -Dt $PKG/usr/share/bash-completion/completions \
		yt-dlp/completions/bash/yt-dlp
}
