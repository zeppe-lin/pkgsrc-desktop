# Description: Dark mode for firefox
# URL:         https://darkreader.org/
# Depends on:  firefox-bin

name=firefox-darkreader-bin
version=4.9.67
release=1
# URL changes on each version, see:
# https://addons.mozilla.org/en-US/firefox/addon/darkreader/
source=https://addons.mozilla.org/firefox/downloads/file/4175386/darkreader-$version.xpi

build() {
	local _DESTDIR=$PKG/opt/firefox/distribution/extensions
	install -m 0644 -D darkreader-$version.xpi \
		$_DESTDIR/addon@darkreader.org.xpi
}
