# Description: Console-based MP3 player 
# URL:         https://www.mpg123.de/
# Depends on:  alsa-lib

name=mpg123
version=1.32.4
release=1
source=https://www.mpg123.de/download/$name-$version.tar.bz2

build() {
	mkdir build; cd build

	../$name-$version/configure  \
		--prefix=/usr        \
		--with-audio=alsa    \

	make V=1
	make DESTDIR=$PKG install
}
