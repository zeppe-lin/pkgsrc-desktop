# Description: Library designed to implement text viewers and e-book readers
# URL:         https://gitlab.com/coolreader-ng/crengine-ng
# Depends on:  fribidi harfbuzz libjpeg-turbo libunibreak utf8proc

name=crengine-ng
version=0.9.12
release=1
source=https://gitlab.com/coolreader-ng/$name/-/archive/$version/$name-$version.tar.gz

build() {
	cmake -S $name-$version -B build -G Ninja       \
		-D CMAKE_INSTALL_PREFIX=/usr            \
		-D CMAKE_INSTALL_LIBDIR=lib             \
		-D CMAKE_BUILD_TYPE=Release             \
		-D CMAKE_C_FLAGS_RELEASE="$CFLAGS"      \
		-D CMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS"  \
		-D CRE_BUILD_SHARED=ON                  \
		-D CRE_BUILD_STATIC=OFF                 \
		-D ENABLE_LTO=ON                        \

	ninja -C build -j ${JOBS:-1} -v
	DESTDIR=$PKG ninja -C build install
}
